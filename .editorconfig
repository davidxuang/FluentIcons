[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 96

csharp_style_namespace_declarations = file_scoped

[*.{js,ts,jsx,tsx}]
indent_size = 2
quote_type = single

[*.{py}]
indent_size = 4

[*.{json,xml,yml,yaml,toml,svg,csproj,fsproj,vbproj,props,targets}]
indent_size = 2
