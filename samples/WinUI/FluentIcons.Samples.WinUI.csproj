<Project Sdk="Uno.Sdk/6.4.31">
  <PropertyGroup>
    <IsPackable>false</IsPackable>
    <TargetFrameworks>net10.0-desktop;net10.0-windows10.0.26100</TargetFrameworks>

    <OutputType>Exe</OutputType>
    <UnoSingleProject>true</UnoSingleProject>

    <!-- Display name -->
    <ApplicationTitle>FluentIcons.Samples.WinUI</ApplicationTitle>
    <!-- App Identifier -->
    <ApplicationId>com.companyname.FluentIcons.Samples.WinUI</ApplicationId>
    <!-- Versions -->
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <ApplicationVersion>1</ApplicationVersion>
    <!-- Package Publisher -->
    <ApplicationPublisher>david</ApplicationPublisher>
    <!-- Package Description -->
    <Description>FluentIcons.Samples.WinUI powered by Uno Platform.</Description>
    <!--
      If you encounter this error message:

        error NETSDK1148: A referenced assembly was compiled using a newer version of Microsoft.Windows.SDK.NET.dll.
        Please update to a newer .NET SDK in order to reference this assembly.

      This means that the two packages below must be aligned with the "build" version number of
      the "Microsoft.Windows.SDK.BuildTools" package above, and the "revision" version number
      must be the highest found in https://www.nuget.org/packages/Microsoft.Windows.SDK.NET.Ref.
    -->
    <!-- <WindowsSdkPackageVersion>10.0.22621.28</WindowsSdkPackageVersion> -->

    <!--
      UnoFeatures are used to quickly add and manage features enabled for your app.
      https://aka.platform.uno/singleproject-features
    -->
    <UnoFeatures>
      Mvvm;
      ThemeService;
      SkiaRenderer;
    </UnoFeatures>
    <Platforms>AnyCPU;x64;ARM64</Platforms>
    <NoWarn>FI001</NoWarn>
    <ManagePackageVersionsCentrally>false</ManagePackageVersionsCentrally>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\FluentIcons.WinUI\FluentIcons.WinUI.csproj" />
  </ItemGroup>

  <!-- Import assets manmually -->
  <Import Project="..\..\FluentIcons.WinUI\build\net8.0-windows10.0.19041.0\FluentIcons.WinUI.targets" />
  <Choose>
    <When Condition="$(TargetFramework.StartsWith('net10.0-windows'))">
      <ItemGroup>
        <Content Include="..\..\seagull-icons\assets\**">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
          <Link>FluentIcons.WinUI\Assets\%(Filename)%(Extension)</Link>
        </Content>
        <PackageReference Include="Microsoft.Graphics.Win2D" Version="1.3.2" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <Content Include="..\..\seagull-icons\assets\**">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
          <Link>FluentIcons.Resources.Uno\Assets\%(Filename)%(Extension)</Link>
        </Content>
      </ItemGroup>
    </Otherwise>
  </Choose>

</Project>
